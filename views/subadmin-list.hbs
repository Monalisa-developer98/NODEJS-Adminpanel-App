<!DOCTYPE html>
<html>
<head>
  <title>Sub Admnin List</title>
  <link rel="stylesheet" href="../css/style.css">
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
<script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
</head>
<body>
    <nav class="main-header navbar navbar-expand-md navbar-light cust-navbar-white p-1">
    
        <div class="container-fluid">
            <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
    
            <div class="collapse navbar-collapse order-3" id="navbarCollapse">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/auth/admindashboard" class="nav-link"><iconify-icon icon="ri:admin-fill" style="color: #202560;" width="28" height="25"></iconify-icon>Super Admin</a>
                    </li>
                    <li class="nav-item">
                        <a href="/auth/adminedit" class="nav-link"><iconify-icon icon="material-symbols:settings" style="color: #202560;" width="28" height="28"></iconify-icon>Settings</a>
                    </li>
                    
                </ul>
                <div class="logout">
                    <a href="/auth/logout" class="delete-btn btn-sm"><i class="fas fa-sign-out"></i>Log Out</a>
                </div>
            </div>            
        </div>
    </nav>
    
    <div class="userlists row p_t subadmins-lists">
        <div class="wrapper">
            <div class="row">
                <h1>Tenant List</h1>
                <a href="/register" class="admin-register-btn">New Tenant</a>
                    <table>
                        <tr>
                        <th>SL No</th>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Email</th>
                        <th>License</th>
                        <th>Status</th>
                        <th colspan="3">Action</th>                       
                        </tr>
                        {{#each subadmin}}
                        <tr>
                            <td>{{@index}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.code}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.no_of_license}}</td>
                            <td>
                                {{#if this.is_active}} 
                                <a href="/auth/deactivate/{{this.id}}" class="deact-btn">Deactivate</a>
                                {{else}}
                                <a href="/auth/activate/{{this.id}}" class="act-btn">Activate</a>
                                {{/if}}
                            </td>
                            
                            </td>          
                            <td><a href="/auth/edit/{{this.id}}" class="update-btn btn-sm"><i class="fas fa-user-edit"></i></a></td>
                            <td><a href="/auth/editpassword/{{this.id}}" class="update-btn btn-sm"><i class="fas fa-edit"></a></td>
                            <td><a href="/auth/delete/{{this.id}}" class="delete-btn btn-sm"><i class="fas fa-trash-alt"></i></a></td>
                            
                        </tr>
                        {{/each}}
                    </table>

            </div>
        </div>
    </div>

    <footer class="main-footer"
        style="background:url('/images/footer-logo.jpg'); background-repeat: round; width: 100%; height: 242px;">
        <div class="float-right d-none d-sm-block">
        </div>
    </footer>

    <style>
        .p_t {
            padding: 20px 0;
        }

        footer.main-footer {
            margin: 60px 0 0 0;
        }
    </style>

</body>
</html>
